{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://strasbourg.eu/schemas/news-schema.json",
  "type": "object",
  "properties": {
    "ADD": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "date": {
            "type": "string"
          },
            "title": {
              "$ref": "definitions.json#/definitions/localisedString"
            },
          "subtitle": {
            "$ref": "definitions.json#/definitions/localisedString"
          },
          "description": {
            "$ref": "definitions.json#/definitions/localisedString"
          },
          "url": {
            "type": "string"
          }
        },
        "required": [
          "id",
            "date",
          "title",
          "subtitle",
            "description",
          "url"
        ]
      }
    },
    "UPDATE": {
      "$ref": "#/properties/ADD"
    },
    "DELETE": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        }
      }
    }
  },
    "required": [
        "ADD",
        "UPDATE",
      "DELETE"
    ]
}