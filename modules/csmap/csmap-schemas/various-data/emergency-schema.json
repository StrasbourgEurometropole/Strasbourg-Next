{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://strasbourg.eu/schemas/emergency-schema.json",
  "type": "object",
  "properties": {
    "ADD": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "emergencyNumbers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "title": {
                  "$ref": "definitions.json#/definitions/localisedString"
                },
                "order": {
                  "type": "string"
                },
                "number": {
                  "type": "string"
                },
                "color": {
                  "type": "object",
                  "properties": {
                    "fontColor": {
                      "type": "string",
                      "maxLength": 7
                    },
                    "backgroundColor": {
                      "type": "string",
                      "maxLength": 7
                    }
                  }
                }
              }
            }
          },
          "emergencyHelps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "categoryId": {
                  "type": "string"
                },
                "categoryOrder": {
                  "type": "number"
                },
                "categoryTitle": {
                  "$ref": "definitions.json#/definitions/localisedString"
                },
                "categoryContent": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "$ref": "definitions.json#/definitions/localisedString"
                      },
                      "number": {
                        "type": "string"
                      },
                      "order": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "required": [
          "emergencyNumbers",
          "emergencyHelps"
        ]
      }
    },
    "UPDATE": {
      "$ref": "#/properties/ADD"
    },
    "DELETE": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "emergencyNumbers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                }
              }
            }
          },
          "emergencyHelps": {
            "type": "array"
          }
        },
        "required": [
          "emergencyNumbers",
          "emergencyHelps"
        ]
      }
    }
  },
  "required": [
    "ADD",
    "UPDATE",
    "DELETE"
  ]
}