{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://strasbourg.eu/schemas/social-network-schema.json",
  "type": "object",
  "properties": {
    "ADD": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "$ref": "definitions.json#/definitions/localisedString"
          },
          "order": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "picto": {
            "type": "string"
          },
          "color": {
            "type": "string",
            "maxLength": 7
          }
        },
        "required": [
          "id",
          "title",
          "order",
          "url",
          "picto",
          "color"
        ]
      }
    },
    "UPDATE": {
      "$ref": "#/properties/ADD"
    },
    "DELETE": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "ADD",
    "UPDATE",
    "DELETE"
  ]
}