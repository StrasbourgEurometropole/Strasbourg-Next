{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://strasbourg.eu/schemas/place-schema.json",
  "type": "object",
  "properties": {
    "ADD": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "idSurfs": {
            "type": "string"
          },
          "types": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "name": {
            "$ref": "definitions.json#/definitions/localisedString"
          },
          "street": {
            "type": "string"
          },
          "zipCode": {
            "type": "string"
          },
          "city": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "imageURL": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "imageThumbnailURL": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "description": {
            "$ref": "definitions.json#/definitions/localisedString"
          },
          "exceptions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "startDate": {
                  "type": "string",
                  "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                },
                "endDate": {
                  "type": "string",
                  "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                },
                "closed": {
                  "type": "boolean"
                },
                "description": {
                  "$ref": "definitions.json#/definitions/localisedString"
                }
              },
              "required": [
                "description"
              ]
            }
          },
          "accessForDeficient" : {
            "type": "boolean"
          },
            "accessForBlind" : {
                "type": "boolean"
            },
          "accessForDeaf" : {
            "type": "boolean"
          },
            "accessForElder" : {
                "type": "boolean"
            },
          "accessForWheelchair" : {
            "type": "boolean"
          },
          "mercatorX": {
            "type": "string"
          },
          "mercatorY": {
            "type": "string"
          },
          "friendlyURL": {
            "type": "string"
          },
          "websiteURL" : {
            "type": "string"
          }
        },
        "required": [
          "idSurfs",
          "accessForBlind",
          "accessForDeaf",
          "accessForDeficient",
          "accessForElder",
          "mercatorX",
          "mercatorY",
          "friendlyURL"
        ]
      }

    },
    "DELETE": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "idSurfs": {
            "type": "string"
          }
        }
      }
    },
    "UPDATE": {
      "$ref": "#/properties/ADD"
    },
    "responseCode": {
      "type": "integer"
    }
  },
  "required": [
    "ADD",
    "DELETE",
    "UPDATE",
    "responseCode"
  ]
}