{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://strasbourg.eu/schemas/place-category-schema.json",
  "type": "object",
  "properties": {
    "ADD": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "parent_id" : {
            "type": "string"
          },
            "name": {
              "$ref": "definitions.json#/definitions/localisedString"
            },
          "picto" : {
            "type": "object",
            "properties": {
              "pictoURL": {
                "type": "string"
              },
              "maj": {
                "type": "string"
              }
            }
          },
          "color_gradient" : {
            "type": "object",
            "properties": {
              "start": {
                "type": "string",
                "maxLength": 7
              },
              "end": {
                "type": "string",
                "maxLength": 7
              }
            }
          }

        },
        "required": [
          "id",
          "name",
          "picto",
          "color_gradient"
        ]
      }

    },
    "DELETE": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          }
        }
      }
    },
    "UPDATE": {
      "$ref": "#/properties/ADD"
    },
    "responseCode": {
      "type": "integer"
    }
  },
  "required": [
    "ADD",
    "DELETE",
    "UPDATE",
    "responseCode"
  ]
}