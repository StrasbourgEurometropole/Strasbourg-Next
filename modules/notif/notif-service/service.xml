<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.0.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_0_0.dtd">

<service-builder package-path="eu.strasbourg.service.notif">
	<namespace>notif</namespace>

	<!-- Service -->
	<entity local-service="true" cache-enabled="true" name="ServiceNotif" remote-service="true" uuid="false" >

		<column name="serviceId" primary="true" type="long" />
		<column name="organisationId" type="long" />
		<column name="name" type="String" />
		<column name="pictoId" type="long" />

		<!-- Order -->
		<order by="desc">
			<order-column case-sensitive="false" name="name" />
		</order>
		<!--
                <finder name="ServiceIdAndOrganisationId" return-type="Collection">
                    <finder-column name="serviceId" />
                    <finder-column name="organisationId" />
                </finder>

                <finder name="OrganisationId" return-type="Collection">
                    <finder-column name="organisationId" />
                </finder>-->
	</entity>

	<!-- Nature -->
	<entity local-service="true" cache-enabled="true" name="NatureNotif" remote-service="true" uuid="false" >

		<column name="natureId" primary="true" type="long" />
		<column name="serviceId" type="long" />
		<column name="name" type="String" />
		<!--
                <finder name="NatureIdAndServiceId" return-type="Collection">
                    <finder-column name="natureId" />
                    <finder-column name="serviceId" />
                </finder>-->

                <finder name="ServiceId" return-type="Collection">
                    <finder-column name="serviceId" />
                </finder>
	</entity>

	<!-- Message -->
	<entity local-service="true" cache-enabled="true" name="Message" remote-service="true" uuid="false" >

		<column name="messageId" primary="true" type="long" />
		<column name="serviceId" type="long" />
		<column name="content" type="String" localized="true" />
<!--
		<finder name="MessageIdAndServiceId" return-type="Collection">
			<finder-column name="messageId" />
			<finder-column name="serviceId" />
		</finder>-->

		<finder name="ServiceId" return-type="Collection">
			<finder-column name="serviceId" />
		</finder>
	</entity>


	<entity local-service="true" name="Notification" remote-service="true" uuid="true">

		<column name="notificationId" primary="true" type="long" />

		<!-- Group instance -->
		<column name="groupId" type="long" />

		<!-- Audit fields -->
		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Workflow fields -->
		<column name="status" type="int" />
		<column name="statusByUserId" type="long" />
		<column name="statusByUserName" type="String" />
		<column name="statusDate" type="Date" />


		<column name="serviceId" type="long" />
		<column name="isAlert" type="int" />
		<column name="natureId" type="long" />
		<column name="title" type="String" localized="true" />
		<column name="subtitle" type="String" localized="true" />
		<column name="startDate" type="Date" />
		<column name="endDate" type="Date" />
		<column name="broadcastDate" type="Date" />
		<column name="isAutomaticMessage" type="int" />
		<column name="content" type="String" localized="true" />
		<column name="labelUrl" type="String" localized="true" />
		<column name="url" type="String" localized="true" />
		<column name="typeBroadcast" type="long" />
		<column name="broadcastChannels" type="String" />
		<column name="sendStatusCsmap" type="long" />
		<column name="sendStatusTwitter" type="long" />
		<column name="sendStatusMonst" type="long" />
		<column name="sendStatusMail" type="long" />
		<column name="sendStatusSegur" type="long" />
<!--
		<finder name="NotificationIdAndServiceIdAndNatureId" return-type="Collection">
			<finder-column name="notificationId" />
			<finder-column name="serviceId" />
			<finder-column name="natureId" />
		</finder>

		<finder name="NotificationIdAndServiceId" return-type="Collection">
			<finder-column name="notificationId" />
			<finder-column name="serviceId" />
		</finder>

		<finder name="NotificationIdAndNatureId" return-type="Collection">
			<finder-column name="notificationId" />
			<finder-column name="natureId" />
		</finder>

		<finder name="ServiceIdAndNatureId" return-type="Collection">
			<finder-column name="serviceId" />
			<finder-column name="natureId" />
		</finder>

		<finder name="ServiceId" return-type="Collection">
			<finder-column name="serviceId" />
		</finder>

		<finder name="NatureId" return-type="Collection">
			<finder-column name="natureId" />
		</finder>
-->
		<!-- References -->
		<reference entity="AssetEntry" package-path="com.liferay.portlet.asset" />
		<reference entity="AssetTag" package-path="com.liferay.portlet.asset" />
		<reference entity="AssetLink" package-path="com.liferay.portlet.asset" />
	</entity>
</service-builder>