                        "fragmentConfig": {
                          "videoWidth": "",
                          "video": "{\"html\":\"<iframe data-thumbnail=\\\"https://s1.dmcdn.net/v/VnCAc1bt9XoFruaa6/x1080\\\" allow=\\\"autoplay; encrypted-media\\\" allowfullscreen frameborder=\\\"0\\\" src=\\\"https://www.dailymotion.com/embed/video/k3wzzXHwkOnqzNA4mG2?rel=0&autoplay=0\\\"><\\/iframe>\",\"title\":\"La connexion du TSPO avec le cœur d\\u2019agglomération strasbourgeoise et le projet du Hub multimodal de Strasbourg \\u2013 secteur Halles\",\"type\":\"com.liferay.item.selector.criteria.VideoEmbeddableHTMLItemSelectorReturnType\"}",
                          "align": "flex-start",
                          "videoHeight": ""
                        },
                        "fragmentFields": [],
                        "indexed": true
