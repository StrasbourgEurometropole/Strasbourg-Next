                            "id": "element-html",
                            "value": {
                              "html": {
                                "value_i18n": {
                                  "fr_FR": "<iPframe frameborder=\"0\" class=\"juxtapose\" width=\"100%\" height=\"600\" src=\"https://cdn.knightlab.com/libs/juxtapose/latest/embed/index.html?uid=b981f45a-e04f-11ee-9685-5d0fb8b12f54\"></iframe>"
